{
	"name": "golden-nuggets-finder",
	"version": "1.1.0",
	"main": "index.js",
	"displayName": "Golden Nugget Finder",
	"description": "Extract high-value insights from web content using AI",
	"scripts": {
		"dev": "wxt",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:dev": "wxt build --mode development",
		"build:firefox": "wxt build -b firefox",
		"clean": "rm -rf dist",
		"package": "wxt zip",
		"postinstall": "wxt prepare",
		"icons": "node scripts/generate-icons.js",
		"test": "vitest --exclude='tests/integration/**'",
		"test:ui": "vitest --ui --exclude='tests/integration/**'",
		"test:run": "vitest run --exclude='tests/integration/**'",
		"test:watch": "vitest watch --exclude='tests/integration/**'",
		"test:coverage": "vitest run --coverage --exclude='tests/integration/**'",
		"test:integration": "vitest run tests/integration",
		"test:integration:watch": "vitest watch tests/integration",
		"test:integration:ui": "vitest --ui tests/integration",
		"test:e2e": "pnpm build:dev && playwright test",
		"test:e2e:ui": "pnpm build:dev && playwright test --ui",
		"test:e2e:debug": "pnpm build:dev && playwright test --debug",
		"test:e2e:headed": "pnpm build:dev && playwright test --headed",
		"test:e2e:report": "playwright show-report",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"typecheck": "tsc --noEmit --skipLibCheck"
	},
	"keywords": [
		"browser-extension",
		"chrome-extension",
		"ai",
		"content-analysis",
		"web-extraction",
		"insights",
		"gemini",
		"productivity"
	],
	"author": "Alex Ferrari",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/alexferrari88/golden-nuggets-finder"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@playwright/test": "^1.54.1",
		"@types/chrome": "^0.1.1",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^24.0.14",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitest/ui": "^3.2.4",
		"@wxt-dev/module-react": "^1.1.3",
		"cross-env": "^10.0.0",
		"dotenv": "^17.2.1",
		"happy-dom": "^18.0.1",
		"jsdom": "^26.1.0",
		"playwright-extra": "^4.3.6",
		"puppeteer-extra-plugin-stealth": "^2.11.2",
		"sharp": "^0.34.3",
		"typescript": "^5.8.3",
		"undici": "^7.13.0",
		"vitest": "^3.2.4",
		"wxt": "^0.20.7"
	},
	"dependencies": {
		"@langchain/anthropic": "^0.3.25",
		"@langchain/community": "^0.3.49",
		"@langchain/core": "^0.3.66",
		"@langchain/openai": "^0.6.3",
		"@mozilla/readability": "^0.6.0",
		"lucide-react": "^0.525.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"threads-harvester": "^1.1.1",
		"zod": "^4.0.14"
	},
	"packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
