{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["vitest/globals", "node", "@types/chrome"],
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "~": ["./src"],
      "~/*": ["./src/*"],
      "@@": ["."],
      "@@/*": ["./*"],
      "~~": ["."],
      "~~/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/unit/**/*",
    "tests/integration/**/*",
    "scripts/**/*",
    "wxt.config.ts",
    ".wxt/wxt.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist", 
    "frontend", 
    "backend",
    "tests/e2e/**/*",
    "playwright.config.ts",
    "**/node_modules/**",
    "**/.pnpm/**"
  ]
}