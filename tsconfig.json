{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "types": ["vitest/globals", "node", "@types/chrome"]
  },
  "include": [
    "src/**/*",
    "tests/unit/**/*",
    "tests/integration/**/*",
    "scripts/**/*",
    "wxt.config.ts",
    ".wxt/wxt.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist", 
    "frontend", 
    "backend",
    "tests/e2e/**/*",
    "playwright.config.ts",
    "**/node_modules/**",
    "**/.pnpm/**"
  ]
}